citHeader("To cite the rmp package in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("rmp")

citEntry(entry = "manual",
  title        = "{R} package rmp: {R}ounded {M}ixture {P}ackage",
  author       = as.person("Antonio Canale"),
  year         = "2015",
  textVersion  =
  paste("Canale, A., (", substr(meta$Date, 1, 4), "). ",
               "R package 'rmp': Rounded Mixture Package",
	       " (version ", meta$Version, "). ",
               sep="")
)
